<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/login_activity_padding"
            android:paddingRight="@dimen/login_activity_padding"
            android:paddingBottom="@dimen/login_activity_padding"
            android:paddingTop="@dimen/general_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_restaurant"
                    android:layout_toStartOf="@id/img_restaurant"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_rest_name"
                        style="@style/text_left"
                        android:text="@string/app_name"
                        android:layout_margin="0dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_left"
                            android:layout_margin="0dp"
                            android:text="@string/txt_name" />

                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_margin="0dp"
                            android:textStyle="bold"
                            style="@style/text_left"
                            android:text="@string/app_name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_left"
                            android:layout_margin="0dp"
                            android:text="@string/txt_phone" />

                        <TextView
                            android:id="@+id/txt_user_phone"
                            style="@style/text_left"
                            android:textStyle="bold"
                            android:layout_margin="0dp"
                            android:text="@string/app_name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_left"
                            android:layout_margin="0dp"
                            android:text="@string/txt_email" />

                        <TextView
                            android:id="@+id/txt_user_email"
                            style="@style/text_left"
                            android:textStyle="bold"
                            android:layout_margin="0dp"
                            android:text="@string/app_name" />

                    </LinearLayout>

                </LinearLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_restaurant"
                    android:layout_width="@dimen/restaurant_adapter_image_size"
                    android:layout_height="@dimen/restaurant_adapter_image_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@color/light_grey"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="8dp"
                    app:riv_mutate_background="true" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/general_padding"
                android:layout_marginTop="@dimen/general_padding"
                android:contentDescription="@string/app_name"
                android:src="@color/grey" />

            <LinearLayout
                android:id="@+id/LL_Step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/text_left"
                    android:text="@string/txt_set_reservation" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Text_Normal"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="0dp"
                        android:text="@string/txt_date"/>

                    <TextView
                        android:id="@+id/txt_date"
                        style="@style/Edit_Text"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Text_Normal"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="0dp"
                        android:text="@string/txt_time"/>

                    <TextView
                        android:id="@+id/txt_time"
                        style="@style/Edit_Text"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_validate_reservation"
                    style="@style/Button_Yes"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_validate" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_Step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/text_left"
                    android:text="@string/txt_set_reservation2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Text_Normal"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="0dp"
                        android:text="@string/txt_adults"/>

                    <EditText
                        android:id="@+id/et_persons"
                        style="@style/Edit_Text"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:digits="1234567890"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Text_Normal"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="0dp"
                        android:text="@string/txt_children"/>

                    <EditText
                        android:id="@+id/et_children"
                        style="@style/Edit_Text"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:digits="1234567890"
                        android:textStyle="bold"
                        android:maxLength="1"
                        android:text="@string/txt_0"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/Text_Normal"
                        android:textStyle="bold"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="@string/txt_special_requirements"/>

                    <EditText
                        android:id="@+id/et_note"
                        style="@style/Edit_Text"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/edit_text_height"
                        android:gravity="center"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:maxLines="10"
                        android:maxLength="50"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/general_padding"
                    android:layout_marginTop="@dimen/general_padding"
                    android:contentDescription="@string/app_name"
                    android:src="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_back"
                        style="@style/Button_No"
                        android:layout_weight="1"
                        android:text="@string/txt_back" />

                    <TextView
                        android:id="@+id/btn_make_reservation"
                        style="@style/Button_Yes"
                        android:layout_weight="1"
                        android:text="@string/txt_continue" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>









