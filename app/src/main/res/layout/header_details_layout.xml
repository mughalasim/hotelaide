<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/collapsing_details_toolbar_height"
    android:layout_marginTop="?android:attr/actionBarSize"
    app:layout_collapseMode="parallax"
    app:layout_scrollFlags="scroll|enterAlways">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/collapsing_details_toolbar_height">

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_details_toolbar_height"
            android:src="@drawable/login_background"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_details_toolbar_height"
            android:visibility="visible"
            android:contentDescription="@string/app_name"
            android:src="@color/dim" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_details_toolbar_height"
            android:background="@color/dim"
            android:orientation="vertical"
            android:paddingBottom="@dimen/collapsing_details_toolbar_padding"
            android:paddingLeft="@dimen/collapsing_details_toolbar_side_padding"
            android:paddingRight="@dimen/collapsing_details_toolbar_side_padding"
            android:paddingTop="@dimen/collapsing_details_toolbar_padding">

            <TextView
                android:id="@+id/restaurant_name"
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="@dimen/text_size_normal_margin"
                android:gravity="start"
                android:textStyle="bold"
                android:paddingEnd="0dp"
                android:paddingLeft="-1dp"
                android:paddingRight="0dp"
                android:paddingStart="-1dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/restaurant_area_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurant_name"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_left"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/text_size_normal_margin"
                    android:text="@string/txt_location_colon"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/restaurant_location"
                    style="@style/text_left"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/text_size_normal_margin"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/restaurant_cuisine_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurant_area_layout"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_left"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/text_size_normal_margin"
                    android:text="@string/txt_cuisine_colon"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/restaurant_cuisine"
                    style="@style/text_left"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/text_size_normal_margin"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/restaurant_reviews"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/text_size_normal_margin"
                android:layout_marginStart="@dimen/text_size_normal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/restaurant_rating"
                    style="@style/Text_Normal"
                    android:layout_gravity="bottom"
                    android:layout_margin="0dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xx_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/restaurant_rating2"
                    style="@style/Text_Normal"
                    android:layout_gravity="bottom"
                    android:layout_margin="0dp"
                    android:gravity="bottom"
                    android:text="@string/txt_rating_outof"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/restaurant_reviews"
                style="@style/text_left"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:layout_margin="@dimen/text_size_normal_margin"
                android:text="@string/txt_read_reviews"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/btn_call_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/text_size_normal_margin"
                android:background="@color/white"
                android:orientation="horizontal"
                android:tag=" ">

                <TextView
                    style="@style/text_left"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="@dimen/call_button_height"
                    android:paddingLeft="@dimen/call_button_width"
                    android:paddingRight="@dimen/call_button_width"
                    android:paddingTop="@dimen/call_button_height"
                    android:text="@string/txt_call_now"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_make_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_call_support"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/text_size_normal_margin"
                android:background="@color/white"
                android:orientation="horizontal"
                android:tag=" ">

                <TextView
                    style="@style/text_left"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="@dimen/call_button_height"
                    android:paddingLeft="@dimen/call_button_width"
                    android:paddingRight="@dimen/call_button_width"
                    android:paddingTop="@dimen/call_button_height"
                    android:text="@string/txt_reservation"
                    android:textAlignment="center" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="@dimen/like_btn_image_size"
                android:layout_height="@dimen/like_btn_image_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/text_size_normal_margin"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_favorite_white_full" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

