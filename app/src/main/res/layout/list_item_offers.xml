<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/offer_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/general_padding"
        android:padding="@dimen/general_padding"
        android:background="@drawable/bckgrd_offers"
        android:visibility="visible">

        <TextView
            android:id="@+id/offer_name"
            style="@style/text_bold_left"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/general_padding"
            android:layout_marginRight="@dimen/general_padding"
            android:layout_toStartOf="@+id/offer_icon"
            android:layout_toLeftOf="@+id/offer_icon" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/offer_icon"
            android:layout_width="@dimen/offer_button_height"
            android:layout_height="@dimen/offer_button_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="50dp"
            android:src="@color/white"
            app:riv_mutate_background="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/offer_id"
        style="@style/Text_Normal"
        android:visibility="gone" />

</LinearLayout>