<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/padding_small"
    android:layout_marginStart="@dimen/padding_small"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_add_filter"
            android:layout_width="@dimen/height_button"
            android:layout_height="@dimen/height_button"
            android:layout_marginEnd="@dimen/padding_small"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_filter" />

        <EditText
            android:id="@+id/et_search"
            style="@style/Edit_Text"
            android:layout_width="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="4"
            android:drawableStart="@drawable/ic_search"
            android:gravity="end|center_vertical"
            android:hint="@string/txt_search_here"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_filter_location"
            style="@style/Text_Small"
            android:layout_marginEnd="@dimen/padding_tiny"
            android:layout_marginTop="0dp"
            android:background="@drawable/bckgrd_text_fields"
            android:drawableEnd="@drawable/ic_cancel"
            android:padding="@dimen/line_thickness" />

        <TextView
            android:id="@+id/txt_filter_category"
            style="@style/Text_Small"
            android:layout_marginEnd="@dimen/padding_tiny"
            android:layout_marginTop="0dp"
            android:background="@drawable/bckgrd_text_fields"
            android:drawableEnd="@drawable/ic_cancel"
            android:padding="@dimen/line_thickness" />

        <TextView
            android:id="@+id/txt_filter_type"
            style="@style/Text_Small"
            android:layout_marginTop="0dp"
            android:background="@drawable/bckgrd_text_fields"
            android:drawableEnd="@drawable/ic_cancel"
            android:padding="@dimen/line_thickness" />

    </LinearLayout>

</LinearLayout>