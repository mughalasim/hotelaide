<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/dark_grey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_collapsing_toolbar">

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bckgrd_fade_to_transparent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@color/black" />

                <TextView
                    android:id="@+id/txt_establishment_type"
                    style="@style/Text_Small"
                    android:layout_above="@+id/txt_establishment_location"
                    android:layout_marginStart="@dimen/padding_medium"
                    android:layout_marginTop="0dp"
                    android:drawableStart="@drawable/ic_home"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_establishment_location"
                    style="@style/Text_Small"
                    android:layout_above="@+id/txt_establishment_name"
                    android:layout_marginStart="@dimen/padding_medium"
                    android:layout_marginTop="@dimen/padding_tiny"
                    android:drawableStart="@drawable/ic_location"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_establishment_name"
                    style="@style/Text_Header"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/padding_medium"
                    android:layout_marginTop="@dimen/padding_tiny"
                    android:gravity="start"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingEnd="@dimen/padding_medium"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <include layout="@layout/toolbar" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!-- BASIC INFO =====================================================================-->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/padding_small"
                style="@style/Card_Layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text_Title"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginTop="0dp"
                        android:background="@color/light_grey"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="@dimen/padding_small"
                        android:paddingStart="@dimen/padding_small"
                        android:text="@string/nav_profile" />

                    <TextView
                        android:id="@+id/txt_establishment_description"
                        style="@style/Text_Normal"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_tiny"
                        android:paddingEnd="@dimen/padding_small"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="@dimen/padding_small"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_medium"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium">

                <TextView
                    style="@style/Text_Title"
                    android:textAllCaps="true"
                    android:layout_marginTop="0dp"
                    android:text="Gallery" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gallery_recycler_small"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/padding_medium"
                    android:layout_height="@dimen/img_size_large"
                    android:scrollbarSize="0dp" />

            </LinearLayout>


            <!-- JOB VACANCIES ==================================================================-->
            <TextView
                style="@style/Text_Title"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/padding_medium"
                android:visibility="gone"
                android:paddingStart="@dimen/padding_medium"
                android:text="Other job vacancies" />

            <include layout="@layout/frag_recycler_view"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

