<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_main_logo"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_log2"
            android:layout_width="wrap_content"
            android:padding="@dimen/padding_tiny"
            android:layout_marginStart="@dimen/img_size_small"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/padding_small"
            android:scaleType="fitCenter"
            android:src="@drawable/main_logo_horizontal_white" />



    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        style="@style/Tab_Text_Layout"
        android:layout_below="@+id/ll_main_logo" />


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs" />


</RelativeLayout>
