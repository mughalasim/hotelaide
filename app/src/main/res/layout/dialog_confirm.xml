<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtTitle"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_x_large"
            style="@style/Text_Header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbarSize="1dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMessage"
                    style="@style/Text_Normal"
                    android:text="@string/error_location_fetch"
                    android:paddingTop="@dimen/login_activity_padding"
                    android:paddingBottom="@dimen/login_activity_padding"
                    android:textSize="@dimen/text_size_medium" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/login_activity_padding"
                    android:paddingLeft="@dimen/login_activity_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCancel"
                        style="@style/Button_No"
                        android:layout_weight="1"
                        android:text="@string/txt_cancel"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtOk"
                        style="@style/Button_Yes"
                        android:layout_weight="1"
                        android:text="@string/txt_ok" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>