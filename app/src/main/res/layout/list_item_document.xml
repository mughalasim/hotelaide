<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/list_item"
        style="@style/Card_Layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/padding_mini"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_image"
                android:layout_width="@dimen/img_size_medium"
                android:layout_height="@dimen/img_size_medium"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                app:riv_corner_radius="@dimen/img_size_medium"
                android:src="@color/light_grey"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/top_panel"
                android:layout_toEndOf="@+id/img_image"
                android:layout_toStartOf="@+id/btn_download"
                android:layout_marginEnd="@dimen/padding_tiny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding_tiny"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/Text_Normal"
                    android:layout_marginTop="0dp"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_date_uploaded"
                    style="@style/Text_Normal"
                    android:layout_marginTop="0dp"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_download"
                android:layout_width="@dimen/img_size_small"
                android:layout_height="@dimen/img_size_small"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_download"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>



