<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckgrd_login"
        android:contentDescription="@string/app_name" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        app:lottie_fileName="anim_stars.json"
        app:lottie_loop="true" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_account_profile_pic"
        android:layout_above="@+id/animation_view"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/main_logo_vertical" />


</RelativeLayout>
