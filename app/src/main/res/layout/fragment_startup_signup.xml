<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="@dimen/padding_small"
    sothree:umanoFadeColor="@color/dim"
    sothree:umanoPanelHeight="@dimen/height_panel"
    sothree:umanoShadowHeight="4dp">

    <com.southernbox.springscrollview.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small">

            <TextView
                style="@style/Text_Title"
                android:text="REGISTER" />

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="center"
                android:onClick="SIGN_UP"
                android:text="You could opt to give us some details about you so we can sign you up and get you started" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_btn_job_seeker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:textAppearance="@style/Text_Normal"
                    android:layout_height="wrap_content"
                    android:text="Job Seeker"
                    tools:targetApi="lollipop" />

                <RadioButton
                    android:id="@+id/radio_btn_employer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:textAppearance="@style/Text_Normal"
                    android:layout_height="wrap_content"
                    tools:targetApi="lollipop"
                    android:text="Employer"/>

            </RadioGroup>

            <EditText
                android:id="@+id/et_user_first_name"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_first_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_user_last_name"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_last_name"
                android:inputType="text" />

            <TextView
                android:id="@+id/txt_user_dob"
                style="@style/Edit_Text"
                android:text="@string/et_hint_dob" />

            <EditText
                android:id="@+id/et_user_email"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_email"
                android:inputType="textEmailAddress" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:layout_marginTop="@dimen/padding_small">

                <EditText
                    android:id="@+id/et_user_pass"
                    style="@style/Edit_Text"
                    android:layout_marginTop="0dp"
                    android:hint="@string/et_hint_pass"
                    android:inputType="textPassword"
                    android:paddingTop="0dp" />

                <ImageView
                    android:id="@+id/img_user_pass_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:paddingEnd="@dimen/padding_small" />

            </RelativeLayout>

            <EditText
                android:id="@+id/et_user_pass_confirm"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_pass_confirm"
                android:inputType="textPassword" />

            <include layout="@layout/fragment_buttons" />

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="center"
                android:onClick="LOGIN"
                android:paddingTop="@dimen/padding_small"
                android:text="OOps! I already have an account" />

            <TextView
                style="@style/Text_Small"
                android:layout_gravity="center"
                android:onClick="TERMS_CONDITIONS"
                android:text="@string/txt_terms_conditions" />

        </LinearLayout>

    </com.southernbox.springscrollview.SpringScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <TextView
            style="@style/Text_Normal"
            android:text="Social Medial Sign up" />

        <TextView
            style="@style/Text_Normal"
            android:onClick="SIGN_UP"
            android:text="Tap on one below and instantly sign up using either of your accounts on Facebook or Google+" />

        <TextView
            style="@style/Button_Yes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_small"
            android:drawableStart="@drawable/com_facebook_button_icon"
            android:gravity="start|center_vertical"
            android:paddingLeft="@dimen/padding_small"
            android:text=" FACEBOOK" />

        <TextView
            style="@style/Button_No"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="@dimen/padding_small"
            android:drawableStart="@drawable/googleg_standard_color_18"
            android:gravity="start|center_vertical"
            android:paddingLeft="@dimen/padding_small"
            android:text=" GOOGLE" />


    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
