<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_list_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:gravity="center"
    android:padding="@dimen/padding_small"
    android:visibility="visible">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/img_size_medium"
        android:layout_height="@dimen/img_size_medium"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/ic_sad_face" />

    <TextView
        android:id="@+id/txt_no_results"
        style="@style/Text_Header"
        android:layout_width="wrap_content"
        android:layout_below="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_no_items_found"
        android:textAllCaps="false"/>

</RelativeLayout>