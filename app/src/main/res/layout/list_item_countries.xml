<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bckgrd_text_fields">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/country_flag"
        android:layout_width="@dimen/country_flag_image_size"
        android:layout_height="@dimen/country_flag_image_size"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:riv_border_width="0dp"
        app:riv_corner_radius="8dp"
        app:riv_mutate_background="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/country_name"
            style="@style/Text_Normal"
            android:layout_width="wrap_content"
            android:layout_margin="0dp" />

        <TextView
            style="@style/Text_Normal"
            android:layout_width="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/txt_open_bracket" />

        <TextView
            android:id="@+id/city_name"
            style="@style/Text_Normal"
            android:layout_width="wrap_content"
            android:layout_margin="0dp" />

        <TextView
            style="@style/Text_Normal"
            android:layout_width="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/txt_closed_bracket" />

    </LinearLayout>

    <TextView
        android:id="@+id/city_id"
        style="@style/Text_Normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/support_number"
        style="@style/Text_Normal"
        android:visibility="gone" />


</RelativeLayout>