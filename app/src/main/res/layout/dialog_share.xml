<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bckgrd_text_fields"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/Header_Text"
        android:text="@string/txt_share" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share_facebook"
                android:layout_width="@dimen/restaurant_details_share_icons"
                android:layout_height="@dimen/restaurant_details_share_icons"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/share_facebook" />

            <ImageView
                android:id="@+id/share_whatsapp"
                android:layout_width="@dimen/restaurant_details_share_icons"
                android:layout_height="@dimen/restaurant_details_share_icons"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/share_whatsapp" />

            <ImageView
                android:id="@+id/share_messenger"
                android:layout_width="@dimen/restaurant_details_share_icons"
                android:layout_height="@dimen/restaurant_details_share_icons"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:padding="3dp"
                android:src="@drawable/share_messenger" />

            <ImageView
                android:id="@+id/share_email"
                android:layout_width="@dimen/restaurant_details_share_icons"
                android:layout_height="@dimen/restaurant_details_share_icons"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/share_email" />

            <ImageView
                android:id="@+id/share_sms"
                android:layout_width="@dimen/restaurant_details_share_icons"
                android:layout_height="@dimen/restaurant_details_share_icons"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/share_sms" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>