<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/dark_grey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_collapsing_toolbar">

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bckgrd_transparent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@color/black" />

                <TextView
                    android:id="@+id/txt_establishment_name"
                    style="@style/Text_Header"
                    android:layout_alignParentBottom="true"
                    android:gravity="start"
                    android:padding="@dimen/padding_small"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <include layout="@layout/toolbar" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!-- BASIC INFO =====================================================================-->
            <android.support.v7.widget.CardView
                style="@style/Card_Layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text_Title"
                        android:layout_height="@dimen/height_button"
                        android:layout_marginTop="0dp"
                        android:background="@color/light_grey"
                        android:gravity="start|center_vertical"
                        android:paddingEnd="@dimen/padding_small"
                        android:paddingStart="@dimen/padding_small"
                        android:text="@string/nav_profile" />

                    <TextView
                        android:id="@+id/txt_establishment_description"
                        style="@style/Text_Normal"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_tiny"
                        android:paddingEnd="@dimen/padding_small"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textStyle="bold" />

                     <TextView
                        android:id="@+id/txt_establishment_email"
                        style="@style/Text_Normal"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_tiny"
                        android:paddingEnd="@dimen/padding_small"
                        android:text="@string/about_email_address"
                        android:layout_width="wrap_content"
                         android:paddingBottom="@dimen/padding_tiny"
                        android:layout_marginTop="0dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!-- MAPS ===========================================================================-->
            <TextView
                style="@style/Text_Title"
                android:layout_height="@dimen/height_button"
                android:layout_marginTop="@dimen/padding_small"
                android:textColor="@color/colorPrimary"
                android:background="@color/light_grey"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:text="@string/txt_map_location" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_map"
                android:layout_marginTop="@dimen/padding_small">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fragment_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/activity_splash_screen" />

            </android.support.v4.widget.NestedScrollView>


            <!-- JOB VACANCIES ==================================================================-->
            <TextView
                style="@style/Text_Title"
                android:layout_height="@dimen/height_button"
                android:layout_marginTop="@dimen/padding_small"
                android:textColor="@color/colorPrimary"
                android:background="@color/light_grey"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:text="@string/txt_job_vacancies" />

            <include layout="@layout/frag_recycler_view"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

