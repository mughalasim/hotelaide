<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <gradient android:angle="@dimen/angle_color"
                android:centerColor="@color/colorPrimaryLight"
                android:endColor="@color/colorPrimaryLight"
                android:startColor="@color/colorPrimaryLight" />
            <stroke
                android:width="@dimen/line_thickness"
                android:color="@color/colorPrimaryLight" />
            <corners
                android:radius="@dimen/radius_corner" />
        </shape>
    </item>



    <item android:state_enabled="true">
        <shape>
            <padding
                android:bottom="@dimen/text_margin"
                android:left="@dimen/text_margin"
                android:right="@dimen/text_margin"
                android:top="@dimen/text_margin" />
        </shape>
    </item>

</selector>