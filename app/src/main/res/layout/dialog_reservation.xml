<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_padding"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/restaurant_name"
        style="@style/Header_Text"
        android:layout_margin="0dp"
        android:text="@string/app_name" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:src="@color/colorPrimary"
        android:layout_height="@dimen/nav_header_height"
        android:layout_marginBottom="@dimen/general_padding"
        android:layout_marginTop="@dimen/general_padding"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:riv_border_width="0dp"
        app:riv_corner_radius="8dp"
        app:riv_mutate_background="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="@dimen/general_padding"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/general_padding"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:paddingEnd="@dimen/text_size_header_margin"
                android:textStyle="bold"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/text_size_header_margin"
                android:paddingStart="0dp"
                android:text="@string/txt_reservation_state" />

            <TextView
                android:id="@+id/state"
                style="@style/Text_Normal"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:paddingEnd="@dimen/text_size_header_margin"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/text_size_header_margin"
                android:paddingStart="0dp"
                android:text="@string/txt_created_on" />

            <TextView
                android:id="@+id/created_date"
                style="@style/Text_Normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:paddingEnd="@dimen/text_size_header_margin"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/text_size_header_margin"
                android:paddingStart="0dp"
                android:text="@string/txt_adults" />

            <TextView
                android:id="@+id/persons"
                style="@style/Text_Normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:paddingEnd="@dimen/text_size_header_margin"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/text_size_header_margin"
                android:paddingStart="0dp"
                android:text="@string/txt_children" />

            <TextView
                android:id="@+id/children"
                style="@style/Text_Normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:paddingEnd="@dimen/text_size_header_margin"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/text_size_header_margin"
                android:paddingStart="0dp"
                android:text="@string/txt_date" />

            <TextView
                android:id="@+id/date"
                style="@style/Text_Normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:paddingEnd="@dimen/text_size_header_margin"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/text_size_header_margin"
                android:paddingStart="0dp"
                android:text="@string/txt_time" />

            <TextView
                android:id="@+id/time"
                style="@style/Text_Normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="0dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <TextView
            style="@style/Text_Normal"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:paddingEnd="@dimen/text_size_header_margin"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:paddingRight="@dimen/text_size_header_margin"
            android:paddingStart="0dp"
            android:text="@string/txt_special_requirements" />

        <ImageView
            android:layout_width="match_parent"
            android:src="@color/grey"
            android:layout_marginTop="@dimen/text_size_normal_margin"
            android:layout_marginBottom="@dimen/text_size_normal_margin"
            android:contentDescription="@string/app_name"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/note"
            style="@style/Text_Normal"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="@color/blue"
        android:contentDescription="@string/app_name"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_back"
            style="@style/Text_Normal"
            android:textColor="@color/blue"
            android:layout_weight="2"
            android:text="@string/txt_back" />

        <ImageView
            android:layout_width="1dp"
            android:src="@color/blue"
            android:contentDescription="@string/app_name"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_ok"
            style="@style/Text_Normal"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:text="@string/txt_view" />

    </LinearLayout>

</LinearLayout>