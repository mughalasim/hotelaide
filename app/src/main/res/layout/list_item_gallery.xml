<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/restaurant_details_gallery_small"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/no_list_items"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="@dimen/restaurant_details_gallery_small"
        android:alpha="0.5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_sad_face" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Normal"
                android:text="@string/txt_no_gallery_images" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_items"
        android:layout_width="@dimen/restaurant_details_gallery_small"
        android:layout_height="@dimen/restaurant_details_gallery_small"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/general_padding"
        android:layout_marginRight="@dimen/general_padding">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            app:riv_corner_radius="8dp"
            android:scaleType="centerCrop"
            app:riv_border_color="@color/grey"
            app:riv_border_width="1sp"
            app:riv_mutate_background="true" />

    </RelativeLayout>


</RelativeLayout>