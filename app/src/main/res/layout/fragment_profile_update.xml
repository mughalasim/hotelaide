<?xml version="1.0" encoding="utf-8"?>

<com.southernbox.springscrollview.SpringScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small">


        <!--FIRST NAME ==========================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_first_name"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_user_first_name"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:hint="@string/et_hint_first_name"
            android:inputType="text" />


        <!--LAST NAME ===========================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_last_name"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_user_last_name"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:hint="@string/et_hint_last_name"
            android:inputType="text" />


        <!--GENDER ==============================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_gender"
            android:textColor="@color/colorPrimary" />

        <Spinner
            android:id="@+id/spinner_user_gender"
            style="@style/Edit_Text"
            android:drawableStart="@drawable/ic_location"
            android:gravity="end|center_vertical"
            android:padding="0dp" />


        <!--EMAIL ===============================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_email"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_user_email"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:minWidth="@dimen/height_edit_text"
            android:text="@string/app_name" />


        <!--COUNTRY CODE ========================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_country_code"
            android:textColor="@color/colorPrimary" />

        <com.rilixtech.CountryCodePicker
            android:id="@+id/ccp_user_country_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@drawable/bckgrd_text_fields"
            android:gravity="end|center_vertical"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small"
            sothree:ccp_defaultCode="254"
            sothree:ccp_textColor="@color/colorAccent"
            sothree:ccp_textSize="@dimen/text_size_normal" />


        <!--PHONE NUMBER ========================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_phone"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_user_phone"
            style="@style/Edit_Text"
            android:digits="0123456789"
            android:gravity="end|center_vertical"
            android:hint="@string/et_hint_phone"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1" />


        <!--DATE OF BIRTH =======================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_dob"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_user_dob"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:text="@string/et_hint_dob" />


        <!-- UPDATE PROFILE =====================================================================-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_tiny"
            android:layout_marginTop="@dimen/padding_large"
            sothree:fabSize="mini"
            sothree:rippleColor="@color/white"
            sothree:srcCompat="@drawable/ic_done" />

    </LinearLayout>

</com.southernbox.springscrollview.SpringScrollView>

