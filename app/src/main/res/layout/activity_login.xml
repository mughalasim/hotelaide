<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckgrd_login"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_logo_image_size"
        android:layout_alignParentTop="true"
        android:padding="@dimen/text_size_header_margin"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:background="@drawable/bckgrd_transparent"
        android:src="@drawable/main_logo_horizontal" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_below="@+id/main_logo"
        android:layout_width="match_parent"
        android:background="@drawable/bckgrd_transparent"
        android:layout_height="@dimen/main_logo_image_size"
        app:tabSelectedTextColor="@color/colorPrimaryLight"
        app:tabTextColor="@color/colorAccent"
        app:tabTextAppearance="@style/Text_Title"
        app:tabIndicatorColor="@color/colorPrimaryLight"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabIndicatorHeight="@dimen/line_thickness"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <include
        android:layout_below="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/horizontal_line"/>


</RelativeLayout>
