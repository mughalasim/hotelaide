<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_add_work"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small">

        <TextView
            android:id="@+id/txt_title"
            style="@style/Text_Title"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_id"
            style="@style/Text_Normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/et_name_label"
            style="@style/Text_Normal"
            android:text="@string/txt_company_name"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_name"
            style="@style/Edit_Text"
            android:inputType="text"
            android:hint="@string/txt_company_name" />

        <TextView
            android:id="@+id/et_position_level_label"
            style="@style/Text_Normal"
            android:text="@string/txt_position_held"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_position_level"
            style="@style/Edit_Text"
            android:inputType="text"
            android:hint="@string/txt_position_held" />

        <include layout="@layout/horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_start_date_label"
                    style="@style/Text_Normal"
                    android:text="@string/txt_start_date"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_start_date"
                    style="@style/Edit_Text"
                    android:layout_below="@+id/txt_start_date_label"
                    android:text="@string/txt_select_date" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_end_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/padding_small"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_end_date_label"
                    style="@style/Text_Normal"
                    android:text="@string/txt_end_date"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_end_date"
                    style="@style/Edit_Text"
                    android:layout_below="@+id/txt_end_date_label"
                    android:text="@string/txt_select_date" />

            </RelativeLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_small"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_btn_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_small"
                android:layout_weight="1"
                android:text="@string/txt_work_here" />

            <RadioButton
                android:id="@+id/radio_btn_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/txt_not_work_here" />

        </RadioGroup>


        <include layout="@layout/horizontal_line"/>

        <TextView
            android:id="@+id/et_responsibilities_field_label"
            style="@style/Text_Normal"
            android:text="@string/txt_responsibilities"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_responsibilities_field"
            style="@style/Edit_Text"
            android:layout_height="wrap_content"
            android:hint="@string/txt_responsibilities"
            android:inputType="textCapSentences|textMultiLine"
            android:isScrollContainer="true"
            android:maxLength="2000"
            android:maxLines="150"
            android:padding="@dimen/padding_small" />

        <include layout="@layout/fragment_buttons" />

    </LinearLayout>

</ScrollView>


