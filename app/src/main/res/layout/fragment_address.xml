<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    sothree:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_large"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <!-- REGION  ============================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/txt_county"
            android:textColor="@color/colorPrimary" />

        <Spinner
            android:id="@+id/spinner_location"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:padding="0dp" />


        <!--POST CODE ===========================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/et_hint_postcode"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_postcode"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:hint="@string/et_hint_postcode"
            android:inputType="text" />


        <!-- FULL ADDRESS =======================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/txt_full_address"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_full_address"
            style="@style/Edit_Text"
            android:gravity="end|center_vertical"
            android:hint="@string/txt_full_address"
            android:inputType="text" />


        <!-- FRAGMENT ===========================================================================-->
        <TextView
            style="@style/Text_Normal"
            android:text="@string/txt_map_location"
            android:textColor="@color/colorPrimary" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_collapsing_toolbar" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn_find_location"
                    android:layout_alignBottom="@+id/map"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/padding_tiny"
                    sothree:fabSize="mini"
                    sothree:srcCompat="@drawable/ic_location"
                    sothree:rippleColor="@color/white"/>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- LATITUDE ===================================================================-->
                <TextView
                    style="@style/Text_Normal"
                    android:text="@string/txt_latitude"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_latitude"
                    style="@style/Edit_Text"
                    android:gravity="end|center_vertical"
                    android:minWidth="@dimen/height_edit_text" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- LONGITUDE ==================================================================-->
                <TextView
                    style="@style/Text_Normal"
                    android:text="@string/txt_longitude"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_longitude"
                    style="@style/Edit_Text"
                    android:gravity="end|center_vertical"
                    android:minWidth="@dimen/height_edit_text" />

            </LinearLayout>

        </LinearLayout>


        <!-- UPDATE PROFILE =====================================================================-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_tiny"
            android:layout_marginTop="@dimen/padding_large"
            sothree:fabSize="mini"
            sothree:rippleColor="@color/white"
            sothree:srcCompat="@drawable/ic_done" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>