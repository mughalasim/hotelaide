<?xml version="1.0" encoding="utf-8"?>
<com.southernbox.springscrollview.SpringScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_small"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_work_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/btn_add_work_experience"
            style="@style/Text_Normal"
            android:layout_width="match_parent"
            android:gravity="end"
            android:text="ADD"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>


</com.southernbox.springscrollview.SpringScrollView>