<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/general_padding">

        <TextView
            android:id="@+id/txtTitle"
            android:text="@string/app_name"
            style="@style/Header_Text" />

        <TextView
            android:id="@+id/txtMessage"
            style="@style/Text_Normal"
            android:text="@string/app_name"
            android:paddingTop="@dimen/general_padding"
            android:paddingBottom="@dimen/general_padding"
            android:textSize="@dimen/text_size_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/general_padding"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/digital_card_background_color"
                android:layout_width="@dimen/digital_card_icon_large_bg"
                android:layout_height="@dimen/digital_card_icon_large_bg"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                android:background="@color/green"
                app:riv_border_color="@color/black"
                app:riv_border_width="1dp"
                app:riv_corner_radius="@dimen/digital_card_icon_large_bg" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/digital_card_icon"
                android:layout_width="@dimen/digital_card_icon_large"
                android:layout_height="@dimen/digital_card_icon_large"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/digital_card_icon_large" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbarSize="1dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/digital_card_confirmation_code"
                    style="@style/Edit_Text"
                    android:gravity="center"
                    android:visibility="gone"
                    android:hint="@string/txt_confirmation_code"
                    android:inputType="text" />

                <TextView
                    style="@style/Text_Normal"
                    android:text="@string/txt_claim_offer_terms"
                    android:paddingTop="@dimen/general_padding"
                    android:paddingBottom="@dimen/general_padding"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    style="@style/Text_Normal"
                    android:textSize="@dimen/text_size_normal" />


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@color/blue"
                    android:contentDescription="@string/app_name"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCancel"
                        style="@style/Text_Normal"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:layout_weight="1"
                        android:text="@string/txt_cancel" />

                    <ImageView
                        android:layout_width="1dp"
                        android:src="@color/blue"
                        android:contentDescription="@string/app_name"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/txtOk"
                        style="@style/Text_Normal"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:text="@string/txt_ok" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>