<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/dark_grey"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_collapsing_toolbar"
                    android:layout_marginTop="?android:attr/actionBarSize">

                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/height_panel"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="@dimen/padding_medium"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bckgrd_transparent" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/height_panel"
                        android:alpha="0.4"
                        android:contentDescription="@string/app_name"
                        android:paddingBottom="@dimen/padding_medium"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />

                    <ImageView
                        android:id="@+id/btn_share"
                        android:layout_width="@dimen/img_size_tiny"
                        android:layout_height="@dimen/img_size_tiny"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/padding_small"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/ic_share" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/padding_tiny"
                            android:layout_alignBaseline="@+id/progress_label"
                            android:background="@color/transparent"
                            android:focusable="false"
                            android:max="100"
                            android:paddingEnd="0dp"
                            android:paddingStart="0dp"
                            android:progress="20"
                            android:thumb="@drawable/bckgrd_button_yes" />

                        <TextView
                            android:id="@+id/progress_label"
                            style="@style/Text_Small"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="Completion " />

                        <TextView
                            android:id="@+id/txt_profile_progress"
                            style="@style/Text_Small"
                            android:layout_marginTop="0dp"
                            android:layout_toEndOf="@+id/progress_label"
                            android:text="20%" />

                    </RelativeLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="@dimen/img_size_large"
                        android:layout_height="@dimen/img_size_large"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/padding_medium"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey"
                        app:riv_border_color="@color/colorAccentDark"
                        app:riv_border_width="@dimen/line_thickness"
                        app:riv_corner_radius="@dimen/img_size_large"
                        app:riv_oval="false" />

                </RelativeLayout>

                <include layout="@layout/toolbar" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <com.southernbox.springscrollview.SpringScrollView
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_large"
                android:orientation="vertical">

                <!-- BASIC INFO =================================================================-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_tiny">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Title"
                            android:layout_height="@dimen/height_button"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_grey"
                            android:drawableEnd="@drawable/ic_edit"
                            android:gravity="start|center_vertical"
                            android:onClick="profileEdit"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small"
                            android:text="@string/nav_profile" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                android:id="@+id/txt_user_f_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Asim"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text=" " />

                            <TextView
                                android:id="@+id/txt_user_l_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Mughal"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text=" " />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="(" />

                            <TextView
                                android:id="@+id/txt_user_age"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="25" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text=" yrs)" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Date Of Birth: " />

                            <TextView
                                android:id="@+id/txt_l_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="18-09-1992" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_user_full_address"
                            style="@style/Text_Normal"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small"
                            android:text="Ole Sangale Road" />

                        <TextView
                            android:id="@+id/txt_user_county_name"
                            style="@style/Text_Normal"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:paddingBottom="@dimen/padding_tiny"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small"
                            android:text="Nairobi" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- CONTACT INFO ===============================================================-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_tiny"
                    android:layout_margin="@dimen/padding_tiny">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Title"
                            android:layout_height="@dimen/height_button"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_grey"
                            android:drawableEnd="@drawable/ic_edit"
                            android:gravity="start|center_vertical"
                            android:onClick="profileEdit"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small"
                            android:text="@string/nav_contact_us" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Email: " />


                            <TextView
                                android:id="@+id/txt_user_email"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="asimkenya@gmail.com"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Tel: " />

                            <TextView
                                android:id="@+id/txt_user_phone"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="+254 716 140 603" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Availability: " />

                            <TextView
                                android:id="@+id/txt_user_availability"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingBottom="@dimen/padding_tiny"
                                android:text="immediate" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </com.southernbox.springscrollview.SpringScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/navigation_view" />

</android.support.v4.widget.DrawerLayout>
