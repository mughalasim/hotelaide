<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/customTransition</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/WhiteDrawerIconStyle</item>
    </style>


    <!-- DRAWER ARROW STYLE =====================================================================-->

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <!-- TRANSITIONS ============================================================================-->

    <style name="customTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <!-- HEADER =================================================================================-->

    <style name="Header_Text" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


    <!--SPINNER TEXTS ===========================================================================-->

    <style name="Spinner_Text" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/general_padding</item>
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:background">@drawable/bckgrd_text_fields</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <style name="Spinner_Search" parent="AppTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:longClickable">false</item>
        <item name="android:selectable">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <!--EDIT TEXTS =============================================================================-->

    <style name="Edit_Text" parent="AppTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@drawable/bckgrd_text_fields</item>
        <item name="android:paddingLeft">@dimen/general_padding</item>
        <item name="android:paddingRight">@dimen/general_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSelectHandle">@drawable/edit_text_selection_background</item>
        <item name="android:selectable">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Edit_Text_Payments" parent="AppTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@drawable/bckgrd_text_fields_square</item>
        <item name="android:paddingLeft">@dimen/general_padding</item>
        <item name="android:paddingRight">@dimen/general_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSelectHandle">@drawable/edit_text_selection_background</item>
        <item name="android:selectable">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>


    <!-- NORMAL TEXT ============================================================================-->

    <style name="Text_Normal" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_multiplier</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text_Small" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">@dimen/text_size_small_margin</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="text_left" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_multiplier</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_bold_left" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_multiplier</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/text_size_normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_size_header_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_size_normal_margin</item>
        <item name="android:layout_marginRight">@dimen/text_size_normal_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


    <!--BUTTON STYLES ==========================================================================-->

    <style name="Button_Yes" parent="AppTheme">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bckgrd_button_yes</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Button_No" parent="AppTheme">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bckgrd_button_no</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/text_size_normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Button_Search_Right" parent="AppTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bckgrd_button_search_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Button_Search_Left" parent="AppTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bckgrd_button_search_left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Button_Search_Middle" parent="AppTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bckgrd_button_search_middle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Button_green" parent="AppTheme">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bckgrd_button_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>
