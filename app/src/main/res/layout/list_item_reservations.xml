<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

   <include layout="@layout/list_item_none"/>

    <RelativeLayout
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="@dimen/general_padding"
            android:layout_marginLeft="@dimen/general_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_name"
                style="@style/Text_Normal"
                android:text="@string/app_name"
                android:layout_gravity="start"
                android:textSize="@dimen/text_size_medium"
                android:layout_margin="0dp" />

            <TextView
                android:id="@+id/state"
                android:textColor="@color/grey"
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/txt_created_on"
                    style="@style/Text_Normal"
                    android:layout_gravity="start"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="@dimen/text_size_header_margin"
                    android:paddingEnd="@dimen/text_size_header_margin"
                    android:layout_margin="0dp" />

                <TextView
                    android:id="@+id/created_date"
                    style="@style/Text_Normal"
                    android:layout_gravity="start"
                    android:layout_margin="0dp" />


            </LinearLayout>

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="@dimen/restaurant_adapter_image_size"
            android:layout_height="@dimen/restaurant_adapter_image_size"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>