<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/light_grey"
                android:centerColor="@color/grey"
                android:endColor="@color/dark_grey"
                android:angle="@dimen/color_angle" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/line_thickness"
                android:top="@dimen/line_thickness"
                android:right="@dimen/line_thickness"
                android:bottom="@dimen/line_thickness" />
        </shape>
    </item>

</selector>