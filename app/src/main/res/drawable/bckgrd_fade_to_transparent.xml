<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/transparent_black"
                android:centerColor="@color/dimmer"
                android:endColor="@color/transparent"
                android:angle="90" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/line_thickness"
                android:top="@dimen/line_thickness"
                android:right="@dimen/line_thickness"
                android:bottom="@dimen/line_thickness" />
        </shape>
    </item>

</selector>