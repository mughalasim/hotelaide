<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    style="@style/Card_Layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_mini">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_image"
            android:layout_width="@dimen/img_size_small"
            android:layout_height="@dimen/img_size_small"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@color/light_grey"
            app:riv_corner_radius="@dimen/radius_corner" />

        <LinearLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_toStartOf="@+id/btn_download"
            android:layout_toEndOf="@+id/img_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                style="@style/Text_Normal"
                android:layout_marginTop="0dp"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date_uploaded"
                style="@style/Text_Normal"
                android:layout_marginTop="0dp"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btn_download"
            android:layout_width="@dimen/img_size_small"
            android:layout_height="@dimen/img_size_small"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padding_mini"
            android:layout_toStartOf="@+id/btn_delete"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_download" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/img_size_small"
            android:layout_height="@dimen/img_size_small"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>




