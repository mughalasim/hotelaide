<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        style="@style/Text_Title"
        android:gravity="center"
        android:text="@string/txt_share" />

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_facebook"
            android:layout_width="0dp"
            android:layout_height="@dimen/img_size_medium"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/share_facebook" />

        <ImageView
            android:id="@+id/share_whatsapp"
            android:layout_width="0dp"
            android:layout_height="@dimen/img_size_medium"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/share_whatsapp" />

        <ImageView
            android:id="@+id/share_messenger"
            android:layout_width="0dp"
            android:layout_height="@dimen/img_size_medium"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:padding="3dp"
            android:src="@drawable/share_messenger" />

        <ImageView
            android:id="@+id/share_email"
            android:layout_width="0dp"
            android:layout_height="@dimen/img_size_medium"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/share_email" />

        <ImageView
            android:id="@+id/share_sms"
            android:layout_width="0dp"
            android:layout_height="@dimen/img_size_medium"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/share_sms" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />


</LinearLayout>