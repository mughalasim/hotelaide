<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_large"
        android:orientation="vertical">

        <TextView
            style="@style/Text_Title"
            android:text="@string/nav_address" />

        <TextView
            style="@style/Text_Normal"
            android:text="@string/about_address" />

        <include layout="@layout/horizontal_line" />

        <TextView
            style="@style/Text_Title"
            android:text="@string/et_hint_email" />

        <TextView
            style="@style/Text_Normal"
            android:text="@string/about_email_address" />

        <include layout="@layout/horizontal_line" />

        <TextView
            style="@style/Text_Title"
            android:text="@string/nav_contact_us" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text_Normal"
                android:layout_marginTop="0dp"
                android:text="@string/about_address_land_line" />

            <TextView
                android:id="@+id/txt_land_line"
                style="@style/Text_Normal"
                android:layout_marginTop="0dp"
                android:text="@string/about_land_line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text_Normal"
                android:layout_marginTop="0dp"
                android:text="@string/about_address_mobile" />

            <TextView
                android:id="@+id/txt_mobile"
                style="@style/Text_Normal"
                android:layout_marginTop="0dp"
                android:text="@string/about_phone" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>