<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/dark_grey"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_collapsing_toolbar"
                    android:layout_marginTop="?android:attr/actionBarSize">

                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/height_panel"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bckgrd_transparent" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/height_panel"
                        android:alpha="0.3"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="@dimen/img_size_large"
                        android:layout_height="@dimen/img_size_large"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/padding_tiny"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey"
                        app:riv_border_color="@color/colorAccentDark"
                        app:riv_border_width="@dimen/line_thickness"
                        app:riv_corner_radius="@dimen/img_size_large"
                        app:riv_oval="false" />

                </RelativeLayout>

                <include layout="@layout/toolbar" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_large">

                <!-- PROGRESS ===================================================================-->
                <RelativeLayout
                    android:id="@+id/rl_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button"
                    android:paddingStart="@dimen/padding_tiny"
                    android:paddingEnd="@dimen/padding_tiny"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seek_bar_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:progress="15"
                        android:max="100"
                        android:thumb="@drawable/progress_thumb"
                        android:progressDrawable="@drawable/progress_background" />

                    <TextView
                        android:id="@+id/progress_label"
                        style="@style/Text_Small"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="@string/txt_profile_completion" />

                    <TextView
                        android:id="@+id/txt_progress"
                        style="@style/Text_Small"
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/progress_label" />

                </RelativeLayout>

                <!-- BASIC INFO =================================================================-->
                <android.support.v7.widget.CardView
                    style="@style/Card_Layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_basic_info"
                            style="@style/Text_Title"
                            android:layout_height="@dimen/height_button"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_grey"
                            android:gravity="start|center_vertical"
                            android:paddingEnd="@dimen/padding_small"
                            android:onClick="editProfile"
                            android:paddingStart="@dimen/padding_small"
                            android:drawableEnd="@drawable/ic_edit"
                            android:text="@string/nav_profile" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                android:id="@+id/txt_user_f_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_user_l_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/txt_open_bracket" />

                            <TextView
                                android:id="@+id/txt_user_age"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/txt_closed_bracket" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/et_hint_dob" />

                            <TextView
                                android:id="@+id/txt_user_dob"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_user_full_address"
                            style="@style/Text_Normal"
                            android:layout_marginTop="0dp"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small" />

                        <TextView
                            android:id="@+id/txt_user_county_name"
                            style="@style/Text_Normal"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:layout_marginTop="0dp"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- CONTACT INFO ===============================================================-->
                <android.support.v7.widget.CardView
                    style="@style/Card_Layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_contact_info"
                            style="@style/Text_Title"
                            android:layout_height="@dimen/height_button"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_grey"
                            android:gravity="start|center_vertical"
                            android:paddingEnd="@dimen/padding_small"
                            android:onClick="editProfile"
                            android:drawableEnd="@drawable/ic_edit"
                            android:paddingStart="@dimen/padding_small"
                            android:text="@string/nav_contact_us" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingEnd="@dimen/padding_tiny"
                                android:paddingStart="0dp"
                                android:text="@string/et_hint_email" />


                            <TextView
                                android:id="@+id/txt_user_email"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingEnd="@dimen/padding_tiny"
                                android:paddingStart="0dp"
                                android:text="@string/txt_address_mobile" />

                            <TextView
                                android:id="@+id/txt_user_phone"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingStart="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/txt_availability" />

                            <TextView
                                android:id="@+id/txt_user_availability"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <!-- EDUCATION EXPERIENCE =======================================================-->
                <TextView
                    android:id="@+id/txt_education_edit"
                    style="@style/Text_Title"
                    android:layout_height="@dimen/height_button"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@color/dark_grey"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:onClick="editProfile"
                    android:drawableEnd="@drawable/ic_edit"
                    android:text="@string/nav_education" />

                <LinearLayout
                    android:id="@+id/ll_fragment_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <!-- WORK EXPERIENCE ============================================================-->
                <TextView
                    android:id="@+id/txt_work_edit"
                    style="@style/Text_Title"
                    android:layout_height="@dimen/height_button"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@color/dark_grey"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    android:onClick="editProfile"
                    android:drawableEnd="@drawable/ic_edit"
                    android:text="@string/nav_work" />

                <LinearLayout
                    android:id="@+id/ll_fragment_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/navigation_view" />

</android.support.v4.widget.DrawerLayout>
