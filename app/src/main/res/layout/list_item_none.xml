<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_list_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:alpha="0.5"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/my_account_profile_pic"
        android:layout_height="@dimen/my_account_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/login_activity_padding"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/ic_sad_face" />

    <TextView
        android:id="@+id/txt_no_results"
        style="@style/Text_Header"
        android:layout_below="@id/imageView"
        android:text="@string/txt_no_restaurants"
        android:textAllCaps="false" />


</RelativeLayout>