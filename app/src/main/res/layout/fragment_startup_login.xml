                android:gravity="start"
                android:textColor="@color/colorPrimary"
                android:text="@string/txt_eatout_site_and_apps" />

            <TextView
                style="@style/Text_Normal"
                android:gravity="start"
                android:text="@string/about1" />

            <TextView
                style="@style/Header_Text"
                android:gravity="start"
                android:textColor="@color/colorPrimary"
