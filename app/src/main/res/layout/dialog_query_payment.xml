<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/login_activity_padding"
        android:src="@drawable/loading_food" />

    <TextView
        android:id="@+id/txtTitle"
        android:paddingTop="@dimen/login_activity_padding"
        android:paddingBottom="@dimen/login_activity_padding"
        style="@style/Header_Text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scrollbarSize="1dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMessage"
                style="@style/Text_Normal"
                android:gravity="start"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCancel"
                    style="@style/Button_No"
                    android:layout_weight="1"
                    android:text="@string/txt_cancel" />

                <TextView
                    android:id="@+id/txtOk"
                    style="@style/Button_Yes"
                    android:layout_weight="1"
                    android:text="@string/txt_validate" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>