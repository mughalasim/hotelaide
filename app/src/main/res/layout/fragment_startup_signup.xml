<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoFadeColor="@color/dim"
    sothree:umanoPanelHeight="@dimen/height_panel"
    sothree:umanoShadowHeight="@dimen/line_thickness">

    <com.southernbox.springscrollview.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="center"
                android:onClick="SIGN_UP"
                android:text="You could opt to give us some details about you so we can sign you up and get you started" />


            <EditText
                android:id="@+id/et_user_first_name"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_first_name"
                android:inputType="text" />


            <EditText
                android:id="@+id/et_user_last_name"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_last_name"
                android:inputType="text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:gravity="center"
                android:orientation="horizontal">

                <com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp_user_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/padding_small"
                    android:background="@drawable/bckgrd_text_fields"
                    android:gravity="center"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    sothree:ccp_defaultCode="254"
                    sothree:ccp_textColor="@color/colorAccent"
                    sothree:ccp_textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/et_user_phone"
                    style="@style/Edit_Text"
                    android:layout_marginTop="0dp"
                    android:digits="0123456789"
                    android:hint="@string/et_hint_phone"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1" />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_user_dob"
                style="@style/Edit_Text"
                android:text="@string/et_hint_dob" />


            <EditText
                android:id="@+id/et_user_email"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_email"
                android:inputType="textEmailAddress" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:layout_marginTop="@dimen/padding_small">

                <EditText
                    android:id="@+id/et_user_pass"
                    style="@style/Edit_Text"
                    android:layout_marginTop="0dp"
                    android:hint="@string/et_hint_pass"
                    android:inputType="textPassword"
                    android:paddingTop="0dp" />

                <ImageView
                    android:id="@+id/img_user_pass_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/padding_small" />

            </RelativeLayout>


            <EditText
                android:id="@+id/et_user_pass_confirm"
                style="@style/Edit_Text"
                android:hint="@string/et_hint_pass_confirm"
                android:inputType="textPassword" />


            <include layout="@layout/fragment_buttons" />

            <include layout="@layout/horizontal_line"/>

            <TextView
                style="@style/Text_Normal"
                android:onClick="LOGIN"
                android:text="Already have an account" />

            <TextView
                style="@style/Text_Normal"
                android:onClick="TERMS_CONDITIONS"
                android:text="@string/txt_terms_conditions" />

        </LinearLayout>

    </com.southernbox.springscrollview.SpringScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <TextView
            android:id="@+id/panel_title"
            style="@style/Text_Normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_panel"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorPrimary"
            android:text="Sign up with social Media instead" />

        <TextView
            style="@style/Text_Normal"
            android:layout_marginBottom="0dp"
            android:text="Tap on one below and instantly sign up using either of your accounts on Facebook or Google+" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_login_facebook"
            style="@style/Button_Yes"
            android:paddingTop="@dimen/text_size_small"
            android:paddingBottom="@dimen/text_size_small"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/padding_small"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_small"
            android:text="SIGN UP WITH FACEBOOK" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_login_google"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_login_google2"
            style="@style/Button_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_weight="0"
            android:paddingTop="@dimen/text_size_small"
            android:paddingBottom="@dimen/text_size_small"
            android:background="@drawable/bckgrd_text_fields"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:paddingStart="@dimen/padding_small"
            android:text="SIGN UP WITH GOOGLE"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
