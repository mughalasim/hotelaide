<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_large"
        android:orientation="vertical">

        <TextView
            style="@style/Text_Title"
            android:text="@string/txt_welcome" />

        <TextView
            style="@style/Text_Normal"
            android:text="@string/txt_welcome_login" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Material_Edit_Text_Layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_user_email"
                style="@style/Material_Edit_Text"
                android:hint="@string/et_hint_email"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Material_Edit_Text_Layout"
            app:passwordToggleDrawable="@drawable/ic_pass_show"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_user_password"
                style="@style/Material_Edit_Text"
                android:hint="@string/et_hint_pass"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <include layout="@layout/layout_button" />

        <include layout="@layout/horizontal_line" />

        <include layout="@layout/frag_startup_signup_bottom"/>

        <include layout="@layout/horizontal_line" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material_Text"
            android:onClick="navigateToSignUpScreen"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@string/nav_sign_up" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material_Text"
            android:onClick="navigateToForgotPassScreen"
            android:text="@string/txt_forgot_password" />

        <com.google.android.material.button.MaterialButton
            style="@style/Material_Text"
            android:onClick="openTermsAndConditions"
            android:text="@string/txt_terms_conditions" />

    </LinearLayout>

</ScrollView>