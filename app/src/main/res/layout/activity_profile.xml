<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/dark_grey"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:titleEnabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_collapsing_toolbar"
                    android:layout_marginTop="?android:attr/actionBarSize">

                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/height_panel"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bckgrd_fade_to_transparent" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/height_panel"
                        android:alpha="0.3"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="@dimen/img_size_large"
                        android:layout_height="@dimen/img_size_large"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/padding_tiny"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey"
                        app:riv_border_color="@color/colorAccentDark"
                        app:riv_border_width="@dimen/line_thickness"
                        app:riv_corner_radius="@dimen/img_size_large"
                        app:riv_oval="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_update_image"
                        style="@style/Material_Text"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:onClick="editProfile"
                        android:text="@string/txt_change_image"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>

                <include layout="@layout/toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_large">

                <!-- PROGRESS ===================================================================-->
                <RelativeLayout
                    android:id="@+id/rl_progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding_tiny"
                    android:paddingEnd="@dimen/padding_tiny">

                    <SeekBar
                        android:id="@+id/seek_bar_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:max="100"
                        android:progress="15"
                        android:progressDrawable="@drawable/progress_background"
                        android:thumb="@drawable/progress_thumb" />

                    <TextView
                        android:id="@+id/progress_label"
                        style="@style/Text_Small"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:text="@string/txt_profile_completion"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_progress"
                        style="@style/Text_Small"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/progress_label"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_user_about"
                    style="@style/Text_Normal"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_tiny"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:textStyle="bold" />

                <!-- BASIC INFO =================================================================-->
                <androidx.cardview.widget.CardView style="@style/Card_Layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_basic_info"
                            style="@style/Text_Title"
                            android:layout_height="@dimen/height_button"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_grey"
                            android:drawableEnd="@drawable/ic_edit"
                            android:gravity="start|center_vertical"
                            android:onClick="editProfile"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small"
                            android:text="@string/nav_profile"
                            android:textColor="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small">

                            <TextView
                                android:id="@+id/txt_user_f_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_user_l_name"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/txt_open_bracket" />

                            <TextView
                                android:id="@+id/txt_user_age"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/txt_closed_bracket" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/et_hint_dob" />

                            <TextView
                                android:id="@+id/txt_user_dob"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/padding_tiny"
                                android:text="@string/txt_gender" />

                            <TextView
                                android:id="@+id/txt_user_gender"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="@string/txt_availability" />

                            <TextView
                                android:id="@+id/txt_user_availability"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CONTACT INFO ===============================================================-->
                <androidx.cardview.widget.CardView style="@style/Card_Layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_contact_info"
                            style="@style/Text_Title"
                            android:layout_height="@dimen/height_button"
                            android:layout_marginTop="0dp"
                            android:background="@color/light_grey"
                            android:drawableEnd="@drawable/ic_edit"
                            android:gravity="start|center_vertical"
                            android:onClick="editProfile"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small"
                            android:text="@string/nav_contact_us"
                            android:textColor="@color/colorPrimary" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/padding_tiny"
                                android:text="@string/et_hint_email" />


                            <TextView
                                android:id="@+id/txt_user_email"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_tiny"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small">

                            <TextView
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/padding_tiny"
                                android:text="@string/about_address_mobile" />

                            <TextView
                                android:id="@+id/txt_user_phone"
                                style="@style/Text_Normal"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="0dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_user_full_address"
                            style="@style/Text_Normal"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:maxLines="1"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_user_county_name"
                            style="@style/Text_Normal"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="@dimen/padding_tiny"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingEnd="@dimen/padding_small"
                            android:visibility="gone" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- EDUCATION EXPERIENCE =======================================================-->
                <TextView
                    android:id="@+id/txt_education_edit"
                    style="@style/Text_Title"
                    android:layout_height="@dimen/height_button"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@color/light_grey"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start|center_vertical"
                    android:onClick="editProfile"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:text="@string/nav_education"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_fragment_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <!-- WORK EXPERIENCE ============================================================-->
                <TextView
                    android:id="@+id/txt_work_edit"
                    style="@style/Text_Title"
                    android:layout_height="@dimen/height_button"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@color/light_grey"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start|center_vertical"
                    android:onClick="editProfile"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:text="@string/nav_work"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_fragment_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <!-- DOCUMENTS ==================================================================-->
                <TextView
                    android:id="@+id/txt_documents_edit"
                    style="@style/Text_Title"
                    android:layout_height="@dimen/height_button"
                    android:layout_marginTop="@dimen/padding_small"
                    android:background="@color/light_grey"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start|center_vertical"
                    android:onClick="editProfile"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:text="@string/nav_documents"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_fragment_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_change_password"
                    style="@style/Material_Text"
                    android:layout_marginTop="@dimen/padding_large"
                    android:onClick="editProfile"
                    android:text="@string/nav_pass" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/navigation_view" />

</androidx.drawerlayout.widget.DrawerLayout>
