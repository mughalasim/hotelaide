<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorAccentLight"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorAccentDark"
                android:angle="@dimen/angle_color" />
            <stroke
                android:width="@dimen/line_thickness"
                android:color="@color/colorAccentLight" />
            <corners
                android:radius="@dimen/radius_corner" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="@color/colorAccentLight"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorAccentDark"
                android:angle="@dimen/angle_color" />
            <stroke
                android:width="@dimen/line_thickness"
                android:color="@color/colorAccentLight" />
            <corners
                android:radius="@dimen/radius_corner" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorAccentLight"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorAccentDark"
                android:angle="@dimen/angle_color" />
            <stroke
                android:width="@dimen/line_thickness"
                android:color="@color/colorAccentLight" />
            <corners
                android:radius="@dimen/radius_corner" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/colorAccentDark"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorAccentLight"
                android:angle="@dimen/angle_color" />
            <stroke
                android:width="@dimen/line_thickness"
                android:color="@color/colorAccentDark" />
            <corners
                android:radius="@dimen/radius_corner" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/line_thickness"
                android:top="@dimen/line_thickness"
                android:right="@dimen/line_thickness"
                android:bottom="@dimen/line_thickness" />
        </shape>
    </item>

</selector>