<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoFadeColor="@color/dim"
    app:umanoPanelHeight="0dp"
    app:umanoShadowHeight="@dimen/line_thickness">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small">

            <TextView
                style="@style/Text_Normal"
                android:layout_gravity="center"
                android:onClick="navigateToSignUpScreen"
                android:text="@string/txt_sign_up_header" />

            <android.support.design.widget.TextInputLayout
                style="@style/Material_Edit_Text_Layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_user_first_name"
                    style="@style/Material_Edit_Text"
                    android:hint="@string/et_hint_first_name"
                    android:inputType="textCapSentences" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Material_Edit_Text_Layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_user_last_name"
                    style="@style/Material_Edit_Text"
                    android:hint="@string/et_hint_last_name"
                    android:inputType="textCapSentences" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_user_gender"
                style="@style/Edit_Text"
                android:drawableStart="@drawable/ic_location"
                android:gravity="start|center_vertical"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:gravity="center"
                android:orientation="horizontal">

                <com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp_user_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_edit_text"
                    android:layout_marginEnd="@dimen/padding_small"
                    android:background="@drawable/bckgrd_text_fields"
                    android:gravity="center"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small"
                    app:ccp_defaultCode="254"
                    app:ccp_textColor="@color/colorAccent"
                    app:ccp_textSize="@dimen/text_size_normal" />

                <android.support.design.widget.TextInputLayout
                    style="@style/Material_Edit_Text_Layout"
                    android:layout_marginTop="0dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_user_phone"
                        style="@style/Material_Edit_Text"
                        android:digits="0123456789"
                        android:hint="@string/et_hint_phone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_user_dob"
                style="@style/Edit_Text"
                android:text="@string/et_hint_dob" />

            <android.support.design.widget.TextInputLayout
                style="@style/Material_Edit_Text_Layout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_user_email"
                    style="@style/Material_Edit_Text"
                    android:hint="@string/et_hint_email"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Material_Edit_Text_Layout"
                app:passwordToggleDrawable="@drawable/ic_pass_show"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_user_pass"
                    style="@style/Material_Edit_Text"
                    android:hint="@string/et_hint_pass"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Material_Edit_Text_Layout"
                app:passwordToggleDrawable="@drawable/ic_pass_show"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_user_pass_confirm"
                    style="@style/Material_Edit_Text"
                    android:hint="@string/et_hint_pass_confirm"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>

            <include layout="@layout/layout_button" />

            <include layout="@layout/horizontal_line" />


            <android.support.design.button.MaterialButton
                style="@style/Material_Text"
                android:id="@+id/btn_open_social_media"
                android:layout_marginTop="@dimen/padding_large"
                android:text="@string/txt_sign_up_social" />

            <android.support.design.button.MaterialButton
                style="@style/Material_Text"
                android:onClick="navigateToLoginScreen"
                android:text="@string/txt_have_account" />

            <android.support.design.button.MaterialButton
                style="@style/Material_Text"
                android:onClick="openTermsAndConditions"
                android:text="@string/txt_terms_conditions" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:layout_height="match_parent">

        <include layout="@layout/frag_startup_signup_bottom" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
