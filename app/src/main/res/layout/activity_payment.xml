<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="vertical"
                android:padding="@dimen/general_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/general_padding"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_offer_icon"
                        android:layout_toStartOf="@id/img_offer_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_offer_discount"
                            style="@style/text_left"
                            android:text="@string/app_name"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/txt_restaurant_name"
                            style="@style/text_left"
                            android:text="@string/app_name"
                            android:textSize="@dimen/text_size_large" />

                    </LinearLayout>


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_offer_icon"
                        android:layout_width="@dimen/restaurant_details_event_height"
                        android:layout_height="@dimen/restaurant_details_event_height"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        app:riv_border_width="0dp"
                        app:riv_corner_radius="8dp"
                        app:riv_mutate_background="true" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="@dimen/general_padding"
                    android:contentDescription="@string/app_name"
                    android:src="@color/grey" />

                <LinearLayout
                    android:id="@+id/LL_Step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:paddingBottom="@dimen/general_padding"
                        style="@style/text_left"
                        android:text="@string/txt_payment_discount" />

                    <EditText
                        android:id="@+id/et_bill_old"
                        style="@style/Edit_Text_Payments"
                        android:digits="0123456789"
                        android:hint="@string/et_hint_amount"
                        android:inputType="number"
                        android:maxLength="5"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/txt_continue_step1"
                        style="@style/Button_green"
                        android:layout_marginTop="@dimen/general_padding"
                        android:text="@string/txt_continue" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/general_padding"
                        android:layout_marginTop="@dimen/general_padding"
                        android:contentDescription="@string/app_name"
                        android:src="@color/grey" />

                    <TextView
                        style="@style/text_bold_left"
                        android:text="@string/txt_terms_payment_title"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        style="@style/text_left"
                        android:text="@string/txt_terms_payment_body" />

                    <TextView
                        android:id="@+id/txt_terms_and_conditions"
                        style="@style/text_left"
                        android:paddingTop="@dimen/general_padding"
                        android:text="@string/txt_terms_payment_more" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Step2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_bold_left"
                            android:layout_centerVertical="true"
                            android:text="@string/txt_bill"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_x_large" />

                        <TextView
                            android:id="@+id/txt_bill_old"
                            style="@style/text_bold_left"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorAccent"
                            tools:ignore="RelativeOverlap"
                            android:textSize="@dimen/text_size_x_large" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_bold_left"
                            android:layout_centerVertical="true"
                            android:text="@string/txt_discount"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_x_large" />

                        <TextView
                            android:id="@+id/txt_bill_discount"
                            style="@style/text_bold_left"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_x_large"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_bold_left"
                            android:layout_centerVertical="true"
                            android:text="@string/txt_revised_bill"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_x_large" />

                        <TextView
                            android:id="@+id/txt_bill_new"
                            style="@style/text_bold_left"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_x_large"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@color/grey" />

                    <TextView
                        style="@style/Text_Normal"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:paddingBottom="@dimen/general_padding"
                        android:text="@string/txt_confirm_mpesa_tel" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:background="@drawable/bckgrd_text_fields_square"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/general_padding"
                        android:paddingLeft="@dimen/general_padding"
                        android:paddingRight="@dimen/general_padding">

                        <ImageView
                            android:id="@+id/img_country_flag"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="3dp"
                            android:contentDescription="@string/app_name" />

                        <EditText
                            android:id="@+id/et_user_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:digits="0123456789"
                            android:hint="@string/et_hint_phone"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/general_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_cancel_step2"
                            style="@style/Button_No"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:text="@string/txt_back" />

                        <ImageView
                            android:layout_width="@dimen/general_padding"
                            android:contentDescription="@string/app_name"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/txt_continue_step2"
                            style="@style/Button_green"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:text="@string/txt_continue" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>


